---
import MainLayout from '../layouts/MainLayout.astro';
import NotFound from '../components/NotFound.vue';
import Footer from '../components/Footer.vue';
import { getEntry } from 'astro:content';

const enSite = await getEntry('site', 'en');
const esSite = await getEntry('site', 'es');

if (!enSite || !esSite) {
  throw new Error("Site data not found");
}

const siteData = {
  en: enSite.data,
  es: esSite.data
};
---

<MainLayout 
  title="404 - Page Not Found | Omar Montoya"
  description="The page you are looking for does not exist."
  noindex={true}
>
	<NotFound client:only="vue" siteData={siteData} />
	<Footer client:visible siteData={siteData} />
</MainLayout>
