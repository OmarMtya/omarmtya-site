---
import '../styles/global.css';
import LanguageSwitcher from '../components/LanguageSwitcher.vue';
import SEO from '../components/SEO.astro';
import SchemaOrg, { type WebsiteSchema, type ArticleSchema } from '../components/SchemaOrg.astro';

interface Props {
	title: string;
	description?: string;
	image?: string;
	imageAlt?: string;
	lang?: 'en' | 'es';
	hideLanguageSwitcher?: boolean;
	type?: 'website' | 'article';
	author?: string;
	pubDate?: Date;
	modDate?: Date;
	tags?: string[];
	canonical?: string;
	noindex?: boolean;
	schemaData?: WebsiteSchema | ArticleSchema;
}

const { 
	title, 
	description = 'Omar Montoya - Solutions Architect & Full-Stack Developer.',
	image,
	imageAlt,
	lang = 'en',
	hideLanguageSwitcher = false,
	type = 'website',
	author,
	pubDate,
	modDate,
	tags,
	canonical,
	noindex = false,
	schemaData
} = Astro.props;
---

<!doctype html>
<html lang={lang}>
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Outfit:wght@300;400;500;600;700&display=swap" rel="stylesheet">
		<title>{title}</title>
		
		<SEO 
			title={title}
			description={description}
			image={image}
			imageAlt={imageAlt}
			lang={lang}
			type={type}
			author={author}
			pubDate={pubDate}
			modDate={modDate}
			tags={tags}
			canonical={canonical}
			noindex={noindex}
		/>

		{schemaData && (
			<SchemaOrg 
				type={type}
				data={schemaData}
			/>
		)}
		
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Fira+Code:wght@300;400;600&family=Merriweather:ital,wght@0,300;0,400;0,700;0,900;1,300;1,400;1,700&family=Inter:wght@300;400;600;700&display=swap" rel="stylesheet">
		
		<!-- Fade-in to prevent flash of unstyled content -->
		<script is:inline>
			document.addEventListener('DOMContentLoaded', function() {
				// Double rAF ensures Vue has hydrated and browser has painted
				requestAnimationFrame(function() {
					requestAnimationFrame(function() {
						document.body.classList.add('lang-ready');
					});
				});
			});
		</script>
		<style is:inline>
			body:not(.lang-ready) {
				opacity: 0;
			}
			body {
				opacity: 1;
				transition: opacity 0.15s ease-in;
			}
		</style>
	</head>
	<body class="relative overflow-x-hidden bg-[#FFFEF8] text-slate-900 font-sans antialiased selection:bg-yellow-200 selection:text-black">
		
		{!hideLanguageSwitcher && <LanguageSwitcher client:only="vue" variant="minimal" />}

		<main class="relative z-10 container mx-auto px-4 pb-8 pt-0">
			<slot />
		</main>
	</body>
</html>
